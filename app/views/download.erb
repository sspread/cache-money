<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
										<div id="logo">
										  <h1><i class="fa fa-download fa-5x"></i></i></h1>
										</div>
                    <h1 class="brand-heading">Download</h1>
                    <h4></h4>
                </div> 
                <div class="col-md-4 col-md-offset-4">   
